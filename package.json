{
  "name": "tarocodepeng",
  "displayName": "CodePengassit",
  "description": "nosay",
  "version": "1.0.17",
  "engines": {
    "vscode": "^1.89.0"
  },
  "publisher": "pengchaolevi",
  "categories": [
    "Other"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/1009867202/tarocodepeng.git"
  },
  "main": "./extension.js",
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "tarocodepeng.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "extension.createFolderFromTemplatetaro",
        "title": "create taro tempalte"
      },
      {
        "command": "extension.createFolderFromTemplateumi",
        "title": "create umi tempalte"
      },
      {
        "command": "extension.createFolderFromTemplatenext",
        "title": "create next tempalte"
      },
      {
        "command": "extension.replaceJsx",
        "title": "Replace JSX ClassNames"
      }
    ],
    "keybindings": [
      {
        "command": "extension.replaceJsx",
        "key": "cmd+n",
        "when": "editorLangId == 'javascript' || editorLangId == 'typescript' || editorLangId == 'javascriptreact' || editorLangId == 'typescriptreact'"
      }
    ],
    "languages": [
      {
        "id": "plaintext",
        "aliases": [
          "Plain Text",
          "plaintext"
        ],
        "extensions": [
          ".js",
          ".ts",
          ".jsx",
          ".tsx",
          ".vue"
        ],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "javascript",
        "aliases": [
          "JavaScript",
          "javascript"
        ],
        "extensions": [
          ".js"
        ]
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.createFolderFromTemplatetaro",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        },
        {
          "command": "extension.createFolderFromTemplateumi",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        },
        {
          "command": "extension.createFolderFromTemplatenext",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "extension.replaceJsx",
          "when": "editorTextFocus",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.89.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.3.9"
  }
}
